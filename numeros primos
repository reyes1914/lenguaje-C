// Online C compiler to run C program online
#include <stdio.h>
#include <stdbool.h>
int main() {
    bool otro = true;
    int respuesta;
    while (!otro == false){
        int num;
        printf("Ingrese el numero \n");
        scanf("%d",&num);
        int divisor = 2;
        int nprimo=0;
        bool Band = true;
        while (Band == true && divisor < num){
            if(num % divisor == 0){
                Band = false;
                } else {
                    divisor = divisor +1;
                }
            }
            if (Band = true){
                printf("El numero es primo \n");
            }else {
                printf("El numero NO es primo \n");
            }
            printf ("Desea continuar ingresando S=1/N=0 \n");
            scanf("%d",&respuesta);
            if(respuesta == 0){
                break;
        }else {
            num=0;
        }
    }
   

    return 0;
}
